@model Kategori

@{
	Layout = "_LayoutAdmin";
}

<div class="content-wrapper">
	<!-- Content -->

	<div class="container-xxl flex-grow-1 container-p-y">
		<h4 class="py-3 mb-4">Kategori</h4>

		<div class="row">
			<!-- Float label (Outline) -->
			<div class="col-md-6">
				<div class="card mb-4">
					<h5 class="card-header">Kategori Adı</h5>
					<div class="card-body pt-4">
						@{
							if (ViewBag.sonuc != null)
							{
								<div class="alert alert-success" role="alert">@ViewBag.sonuc</div>
							}
						}
						<form asp-controller="AdminKategori" asp-action="EkleGuncelle" method="post">
							<input asp-for="Ad" class="form-control" placeholder="Kategori Adı" />
							<div class="mt-3">
								<button type="submit" class="btn rounded-pill btn-success">Ekle</button>
								<a href="/AdminKategori/Index" class="btn rounded-pill btn-danger">İptal</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>