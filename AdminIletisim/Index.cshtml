@{
	Layout = "_LayoutAdmin";
}
@model List<Iletisim>

<div class="content-wrapper">
	<div class="container-xxl flex-grow-1 container-p-y">
		<h4 class="py-3 mb-4">İletişim</h4>
		<div class="card">
			<div class="d-flex justify-content-between">
				<h5 class="card-header">İletişimler</h5>
			</div>
			<div class="table-responsive text-nowrap">
				<table class="table table-borderless">
					<thead>
						<tr>
							<th>Id</th>
							<th>Ad Soyad</th>
							<th>E-Posta</th>
							<th>Telefon</th>
							<th>Mesaj</th>
							<th>Okundumu</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody>
						@{
							foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.AdSoyad</td>
									<td>@item.Eposta</td>
									<td>@item.Telefon</td>
									<td>@item.Mesaj</td>
									<td><span class="badge rounded-pill bg-label-@(item.OkunduMu ? "success":"danger")">@(item.OkunduMu ? "Okundu" : "Okunmadı")</span></td>
									<td>
										<a class="dropdown-item" href="/adminiletisim/ekleguncelle/@item.Id"><i class="mdi mdi-pencil-outline me-1"></i> Güncelle</a>
										<a class="dropdown-item" href="/adminiletisim/sil/@item.Id"><i class="mdi mdi-trash-can-outline me-1"></i> Sil</a>
									</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>