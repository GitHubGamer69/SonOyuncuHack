@{
	Layout = "_LayoutAdmin";
}
@model List<Urun>

<div class="content-wrapper">
	<div class="container-xxl flex-grow-1 container-p-y">
		<h4 class="py-3 mb-4">Ürün</h4>
		<div class="card">
			<div class="d-flex justify-content-between">
				<h5 class="card-header">Ürünler</h5>
				<a href="/AdminUrun/EkleGuncelle" class="btn rounded-pill btn-primary mt-3 me-3 mb-1">+ Yeni Kayıt</a>
			</div>
			<div class="table-responsive text-nowrap">
				<table class="table table-borderless">
					<thead>
						<tr>
							<th>Id</th>
							<th>Adı</th>
							<th>Fiyatı</th>
							<th>İndirim</th>
							<th>Adeti</th>
							<th>Onaylımı</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody>
						@{
							foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.Adi</td>
									<td>@item.Fiyat</td>
									<td>@item.Indirim</td>
									<td>@item.Adet</td>
									<td><span class="badge rounded-pill bg-label-@(item.Onay ? "success":"danger")">@(item.Onay ? "Onaylı" : "Onaysız")</span></td>
									<td>
										<div class="dropdown">
											<a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"></a>
											<ul class="dropdown-menu">
												<li><a class="dropdown-item" href="/adminurun/ekleguncelle/@item.Id"><i class="mdi mdi-pencil-outline me-1"></i> Güncelle</a></li>
												<li><a class="dropdown-item" href="/adminurun/sil/@item.Id"><i class="mdi mdi-trash-can-outline me-1"></i> Sil</a></li>
											</ul>
										</div>
									</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>